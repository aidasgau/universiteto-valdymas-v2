@model project_mvc.Models.AddEnrollmentViewModel

<h1>Add Course</h1>

<form method="post" action="Add" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="SelectedStudentId">Student</label>
        <select class="form-control" id="SelectedStudentId" name="SelectedStudentId" asp-for="SelectedStudentId" asp-items="@Model.AvailableStudents"></select>
    </div>
    <div class="form-group">
        <label for="SelectedCourseId">Course</label>
        <select class="form-control" id="SelectedCourseId" name="SelectedCourseId" asp-for="SelectedCourseId" asp-items="@Model.AvailableCourses"></select>
    </div>
    <div class="form-group">
        <label for="StartDate">Status</label>
        <input type="number" class="form-control" id="Status" name="Status" asp-for="Status">
    </div>
    <div class="form-group">
        <label for="EndDate">Date</label>
        <input type="date" class="form-control" id="Date" name="Date" asp-for="Date">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
