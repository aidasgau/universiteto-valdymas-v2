@model project_mvc.Models.EditEnrollmentViewModel

@{
}

<h1>Edit Enrollment</h1>
<form method="post" action="Edit" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="">Enrollment ID</label>
        <input type="number" class="form-control" asp-for="EnrollmentID" readonly>
    </div>
    <div class="form-group">
        <label for="SelectedStudentId">Student</label>
        <select class="form-control" id="SelectedStudentId" name="SelectedStudentId" asp-for="SelectedStudentId" asp-items="@Model.AvailableStudents"></select>
    </div>
    <div class="form-group">
        <label for="SelectedCourseId">Course</label>
        <select class="form-control" id="SelectedCourseId" name="SelectedCourseId" asp-for="SelectedCourseId" asp-items="@Model.AvailableCourses"></select>
    </div>
    <div class="form-group">
        <label for="">Status</label>
        <input type="number" class="form-control" asp-for="Status">
    </div>
    <div class="form-group">
        <label for="">Date</label>
        <input type="date" class="form-control" asp-for="Date">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>