@model project_mvc.Models.EditStudentViewModel

@{
}

<h1>Edit Student</h1>
<form method="post" action="Edit" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="">Student ID</label>
        <input type="text" class="form-control" asp-for="StudentID" readonly>
    </div>
    <div class="form-group">
        <label for="">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <label for="">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth">
    </div>
    <div class="form-group">
        <label for="">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>
    <div class="form-group">
        <label for="">Program</label>
        <input type="text" class="form-control" asp-for="Program">
    </div>
    <div class="form-group">
        <label for="">Year</label>
        <input type="number" class="form-control" asp-for="Year">
    </div>
    <div class="form-group">
        <label for="">GPA</label>
        <input type="number" class="form-control" asp-for="GPA">
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>