@model project_mvc.Models.EditInstructorViewModel

@{
}

<h1>Edit Instructor</h1>
<form method="post" action="Edit" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="">Instructor ID</label>
        <input type="text" class="form-control" asp-for="InstructorID" readonly>
    </div>
    <div class="form-group">
        <label for="">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <label for="">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="">Faculty</label>
        <input type="text" class="form-control" asp-for="Faculty">
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>