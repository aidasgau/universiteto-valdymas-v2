@model project_mvc.Models.AddCourseViewModel

<h1>Add Course</h1>

<form method="post" action="Add" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="CourseName">Course Name</label>
        <input type="text" class="form-control" id="CourseName" name="CourseName" asp-for="CourseName">
    </div>
    <div class="form-group">
        <label for="SelectedInstructorId">Instructor</label>
        <select class="form-control" id="SelectedInstructorId" name="SelectedInstructorId" asp-for="SelectedInstructorId" asp-items="@Model.AvailableInstructors"></select>
    </div>
    <div class="form-group">
        <label for="Faculty">Faculty</label>
        <input type="text" class="form-control" id="Faculty" name="Faculty" asp-for="Faculty">
    </div>
    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input type="date" class="form-control" id="StartDate" name="StartDate" asp-for="StartDate">
    </div>
    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input type="date" class="form-control" id="EndDate" name="EndDate" asp-for="EndDate">
    </div>
    <div class="form-group">
        <label for="Credits">Credits</label>
        <input type="number" class="form-control" id="Credits" name="Credits" asp-for="Credits">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
