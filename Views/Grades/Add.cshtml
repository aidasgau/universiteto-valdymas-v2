@model project_mvc.Models.AddGradeViewModel

<h1>Add Grade</h1>

<form method="post" action="Add" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="SelectedEnrollmentId">Enrollment</label>
        <select class="form-control" id="SelectedEnrollmentId" name="SelectedEnrollmentId" asp-for="SelectedEnrollmentId" asp-items="@Model.AvailableEnrollments"></select>
    </div>
    <div class="form-group">
        <label for="">Grade</label>
        <input type="number" class="form-control" asp-for="AssignedGrade">
    </div>
    <div class="form-group">
        <label for="">Date</label>
        <input type="date" class="form-control" asp-for="Date">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
